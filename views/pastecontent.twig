<div>
    {% if pastes is not null and pastes is defined %}
        {% for paste in pastes %}
            <div class="paste">
                <h3>Titre: {{ paste.title }}</h3>
                <p>{{ paste.content }}</p>
                <p>{{ paste.createdAt }}</p>
            </div>
        {% endfor %}
    {% else %}
        <div class="paste">
            {{ response.title }}
            {{ response.content }}
        </div>
    {% endif %}

</div>

<style>
    .paste {
        border: black solid;
    }
</style>